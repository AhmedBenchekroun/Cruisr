<ul class="breadcrumb" style="padding-left:150px; margin-bottom:0;"">
    <li><a href="/">Home</a></li>
    <li><a href="friends">Friends</a></li>
    <li><a class="active">Itineraries</a></li>
</ul>
 <div id="photo">
<img src="/images/cruise2.jpg" alt="" style="width: 100%;" ></div>

  <section id="description"  style="margin-top:0;">
    <div class="container">
    

      <div class="row wow fadeInLeft" data-wow-duration="1.5s" data-wow-offset="100">
        <div class="col-md-12">
       <h2 style="text-align:center">Here are the itineraries of <%= @crew_member.full_name %></h2> 
        </div>
      </div>
      
    <div class="row wow fadeInLeft" data-wow-duration="1.5s" data-wow-offset="100">
        <div class="col-md-12">
        <form>
          <table class="table table-hover">
            <thead>
              <tr class="title">
                <th colspan="3" style="text-align: center;">Itineraries</th>
              </tr>
              <tr>
                <th>Date</th>
                <th>Ship</th>
                <th>Port</th>
              </tr>
            </thead>

            <tbody>
            <% @crew_member.voyages.each do |v| %>
              <tr>
                <td><%= v.start_date %> - <%= v.end_date %> </td>
                <td><%= v.ship[:name] %></td>
                <td><%= v.start_port[:city] %> - <%= v.start_port[:country] %> </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          </form>
        </div>
     </div>
    
    </div>   
  </section>

 
  </div>

