<div>
<h1>Crew members on the <%= @ship_name %></h1>   
  <section id="timeline">
    <div class="container-fluid wow fadeInRight" data-wow-duration="1s">
      <div id="timeline-slider" class="owl-carousel">

        <% @crew_members.each do |c| %>
          <div class="item">
              <div class="photo"><img src="<%= c.gravatar_url %>" alt="Lector1" class="img-circle"></div>
              
              <div class="desc">
              
                <h3><%= c.full_name %></h3>
                <p><%= @ship_name%></p>
              </div>
          </div>
        <% end %>
      </div>
    </div>
    
  </section>
</div>
